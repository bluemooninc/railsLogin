<h1>User profile page</h1>

<%= render 'layouts/flash_messages' %>

<table border="1">
  <tr>
    <th>Name</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>Email address</th>
    <td><%= @user.email %></td>
  </tr>
</table>

<% if current_user?(@user) %>
  <p><%= link_to 'Edit', edit_user_path %></p>
<% end %>